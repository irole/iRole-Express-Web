<link rel="stylesheet" href="/css/style.css">
<div class="card">
    <form action="/auth/password/forgot" method="post" novalidate>

        <img class="center" src="/images/iRole.png" width="100%" height="75px">
        <p class="or"></p>
        <h2 class="title"> <%= __("resource.views.auth.forgot-password.page-title") %></h2>
        <p class="or"></p>
        <%- include(viewPath('layouts/error-messages')) -%>
        <div class="email-login">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
            <label for="email"> <b><%= __("resource.views.auth.forgot-password.labels.email") %></b></label>
            <input type="text" class="<%= isValid('email') %>"
                   placeholder="<%= __("resource.views.auth.forgot-password.place-holders.email") %>" name="email"
                   value="<%= getInputValue("email") %>">
            <span class="error"><%= showError('email') %></span>
        </div>
        <input type="submit" class="cta-btn" value="<%= __("resource.views.auth.forgot-password.submit") %>">
    </form>
</div>
